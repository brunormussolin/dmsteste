<p id="notice"><%= notice %></p>

<h1>Hierarchies</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Father</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hierarchies.each do |hierarchy| %>
      <tr>
        <td><%= hierarchy.item %></td>
        <td><%= hierarchy.father %></td>
        <td><%= hierarchy.position %></td>
        <td><%= link_to 'Show', hierarchy %></td>
        <td><%= link_to 'Edit', edit_hierarchy_path(hierarchy) %></td>
        <td><%= link_to 'Destroy', hierarchy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


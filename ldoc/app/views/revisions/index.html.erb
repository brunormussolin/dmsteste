<p id="notice"><%= notice %></p>

<h1>Revisions</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Revision</th>
      <th>Doc revision</th>
      <th>Condition</th>
      <th>Goal</th>
      <th>Obs</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @revisions.each do |revision| %>
      <tr>
        <td><%= revision.item %></td>
        <td><%= revision.revision %></td>
        <td><%= revision.doc_revision %></td>
        <td><%= revision.condition %></td>
        <td><%= revision.goal %></td>
        <td><%= revision.obs %></td>
        <td><%= link_to 'Show', revision %></td>
        <td><%= link_to 'Edit', edit_revision_path(revision) %></td>
        <td><%= link_to 'Destroy', revision, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

